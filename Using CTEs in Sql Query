WITH total_amount_paid_cte (customer_id, first_name, last_name, total_payment, city, country) AS 

(SELECT A.customer_id, A.first_name, A.last_name, SUM(amount) AS total_payment, C.city, D.country   

FROM customer A   

INNER JOIN address B ON A.address_id = B.address_id   

INNER JOIN city C ON B.city_id = C.city_id   

INNER JOIN country D ON C.country_id = D.country_id   

INNER JOIN payment E ON A.customer_id = E.customer_id   

WHERE C.city IN ('Aurora', 'Luzinia', 'Celaya', 'Greensboro', 'Kumbakonam',   

 'Kamarhati', 'Hiroshima', 'Usak', 'Ljubertsy', 'Purnea (Purnia)')   

GROUP BY A.customer_id , C.city, D.country   

ORDER BY SUM(amount) DESC   

LIMIT 5) 

SELECT AVG(total_amount_paid_cte.total_payment)AS average  

FROM total_amount_paid_cte; 
